<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
  
  	<bean id="exportJobConfig" class="com.raytheon.uf.edex.damagepath.handler.ExportToLdadJobConfig" >
  		<constructor-arg value="${damage.path.ldad.export.user}" />
  		<constructor-arg value="${damage.path.ldad.export.host}" />
  		<constructor-arg value="${damage.path.ldad.export.dir}" />
  	</bean>
  	<bean id="exportToLdadHandler" class="com.raytheon.uf.edex.damagepath.handler.ExportToLdadHandler" >
  		<constructor-arg ref="exportJobConfig" />
  	</bean>
	<bean factory-bean="handlerRegistry" factory-method="register">
  		<constructor-arg value="com.raytheon.uf.common.damagepath.request.ExportToLdadRequest" />
  		<constructor-arg ref="exportToLdadHandler" />
  	</bean>
</beans>
