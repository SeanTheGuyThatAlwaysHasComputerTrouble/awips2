  </viirsDataMatches>
  <imageStyle>
     <range scale="LINEAR">
        <minValue>0</minValue>
        <maxValue>0.6</maxValue>
     </range>
     <defaultColormap>NPP/VIIRS/CA (Low Light Vis)</defaultColormap>
  </imageStyle>
</styleRule>
