/* ------------------------------------------------------------------------- */

int UpdateNetworkByRecord (const Network * newStructPtr, const Network * oldStructPtr)
{
    char whereClause[BUFSIZ];
    GetNetworkPrimaryKeyWhereString(oldStructPtr, whereClause);
    return (UpdateNetwork(newStructPtr, whereClause));
}

/* ------------------------------------------------------------------------- */

int InsertOrUpdateNetwork(const Network * structPtr)
{
    UpdateNetworkByRecord(structPtr, structPtr);
    setDbStatusSqlCommand(&dbStatus, UPDATE);

    if ( (SQLCODE < 0) || (SQLCODE == 100) )
    {
        InsertNetwork(structPtr);
        setDbStatusSqlCommand(&dbStatus, INSERT);
    }

    initDbStatus(&dbStatus);
    return(SQLCODE);
}

/* ------------------------------------------------------------------------- */

int InsertIfUniqueNetwork(const Network * structPtr, bool *isUnique)
{
    int resultCode = 0;
    if (NetworkExists(structPtr))
    {
        setDbStatusSqlCommand(&dbStatus, SELECT);
        *isUnique = false;
        resultCode = dbStatus.sql_code;
    }
    else
    {
        resultCode = dbStatus.sql_code;
        if (resultCode == 0)
        {
            InsertNetwork(structPtr);
            setDbStatusSqlCommand(&dbStatus, INSERT);
            *isUnique = true;
            resultCode = dbStatus.sql_code;
        }
        else
        {
            *isUnique = false;
        }
    }
    initDbStatus(&dbStatus);

    return(resultCode);
}

/* ------------------------------------------------------------------------- */

int DeleteNetworkByRecord(const Network * structPtr)
{
    char whereClause[BUFSIZ];
    GetNetworkPrimaryKeyWhereString(structPtr, whereClause);
    return (DeleteNetwork(whereClause));
}

/* ------------------------------------------------------------------------- */

bool NetworkExists(const Network * structPtr)
{
    int result = false;
    int rowCount = 0;
    char whereString[QUERY_LEN];

    GetNetworkPrimaryKeyWhereString(structPtr, whereString);
    rowCount = SelectNetworkCount(whereString);

    if (rowCount > 0)
    {
        result = true;
    }
    else
    {
        result = false;
    }

    return(result);
}

/* ------------------------------------------------------------------------- */

void GetNetworkPrimaryKeyWhereString (const Network * structPtr, char returnWhereString[] )
{
    sprintf(returnWhereString, "WHERE network = '%s' ",
            structPtr->network);
}

/* ------------------------------------------------------------------------- */

void FreeNetwork( Network * structPtr)
{
    Network* nextPtr = NULL;

    while (structPtr != NULL)
    {
        nextPtr = ( Network * ) ListNext ( &structPtr->node );
        free (structPtr);
        structPtr = nextPtr;
    }
    return;
}

