LIB = /fs/hseb/ob83/ohd/util/lib

ARFLAGS  = rv
FC       = /fs/opt/pgi/linux86/bin/pgf90
FOPTIM   = -g
FFLAGS   = $(FOPTIM) -Mbackslash -Mpreprocess

INSERTS      = -I/fs/hseb/ob83/ohd/util/inc  \
               -I/fs/hseb/ob83/ohd/ofs/inc

INSERTS_FC   = -I/fs/opt/pgi/linux86/include  \
               -I../TEXT

.SUFFIXES:
.SUFFIXES:   .f .h .o .a

.f.a:
	@echo "-------------------------------- $<"
	@$(FC) $(FFLAGS) $(INSERTS_FC) $(INSERTS) -c $< \
	   && ar $(ARFLAGS) $@ $*.o \
	   || echo "e - $*"
	@rm -f $*.o
#	@[ -f ${*F}.stb ] && rm -f ${*F}.stb
	@echo "--------------------------------"

$(LIB)/liblooknset_t.a:  \
     $(LIB)/liblooknset_t.a(looknset.o)  \
     $(LIB)/liblooknset_t.a(prtasc.o)  \
     $(LIB)/liblooknset_t.a(prtval.o)  \
     $(LIB)/liblooknset_t.a(putval.o)  \
     $(LIB)/liblooknset_t.a(uprimo_look.o)

