#  ============================================================================
#  pgm: Makefile_obj_lx .. makefile to update the ofs-fcinit_main object files
#
#  cmt: File made on Wed Aug  6 12:48:53 EDT 2008 by user "dsa"
#  ============================================================================
 
OBJ = /fs/hseb/ob83/ohd/ofs/obj/fcinit_main/TEXT

FC       = /fs/opt/pgi/linux86/bin/pgf90
FOPTIM   = -g
FFLAGS   = $(FOPTIM) -Mbackslash -Mpreprocess

INSERTS      = -I/fs/hseb/ob83/ohd/ofs/inc  \
               -I/fs/hseb/ob83/ohd/util/inc  \
               -I/fs/hseb/ob83/ohd/calb/inc  \
               -I/fs/hseb/ob83/ohd/ifp/inc

INSERTS_FC   = -I/fs/opt/pgi/linux86/include  \
               -I../TEXT

.SUFFIXES:
.SUFFIXES:   .f .o

.f.o:
	@echo "-------------------------------- $<"
	@$(FC) $(FFLAGS) $(INSERTS_FC) $(INSERTS) -c $< \
	   && chmod 664 ${*F}.o  \
	   && echo "o - ${*F}.o" \
	   || echo "e - ${*F}"
	@[ -f ${*F}.stb ] && rm -f ${*F}.stb
	@echo "--------------------------------"

objects:  \
     $(OBJ)/fcinmain.o  \
     $(OBJ)/util_to_fcinit.o

$(OBJ)/fcinmain.o: fcinmain.f
	@make -k -f ./Makefile_obj_lx ${@F}
	@-[ -f ${@F} ] && mv ${@F} $(OBJ) || :

$(OBJ)/util_to_fcinit.o: util_to_fcinit.f
	@make -k -f ./Makefile_obj_lx ${@F}
	@-[ -f ${@F} ] && mv ${@F} $(OBJ) || :


