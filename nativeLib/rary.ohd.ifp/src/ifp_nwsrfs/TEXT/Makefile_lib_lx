LIB = /fs/hseb/ob81/ohd/ifp/lib

ARFLAGS  = rv
FC       = /fs/opt/pgi/linux86/bin/pgf90
FOPTIM   = -g
FFLAGS   = $(FOPTIM) -Mbackslash -Mpreprocess

CC       = /usr/bin/gcc
COPTIM   =
CFLAGS   = $(COPTIM) -fno-strict-aliasing -DUNIX -DGRTYPE_PS -DGRTYPE_XWIN -DLINX -DX1D -DTIMER -D__USE_GNU

CXX      = /usr/bin/g++ -Wno-deprecated
CXXOPTIM =
CXXFLAGS = $(CXXOPTIM) -fno-strict-aliasing -DUNIX -DGRTYPE_PS -DGRTYPE_XWIN -DLINX -DX1D -DTIMER -D__USE_GNU

INSERTS      = -I/fs/hseb/ob81/ohd/ifp/inc  \
               -I/fs/hseb/ob81/ohd/ofs/inc  \
               -I/fs/hseb/ob81/ohd/util/inc  \
               -I/fs/hseb/ob81/ohd/calb/inc

INSERTS_FC   = -I/fs/opt/pgi/linux86/include  \
               -I../TEXT

INSERTS_CC   = -I/usr/X11R6/include  \
               -I/usr/include/pgsql  \
               -I/usr/include/pgsql/informix/esql  \
               -I/usr/lib/gcc/i386-redhat-linux/3.4.6/include  \
               -I/usr/local/netcdf/include  \
               -I/usr/local/jdk-1.5.0_04/include  \
               -I/usr/local/jdk-1.5.0_04/include/linux  \
               -I/usr/include  \
               -I../TEXT

INSERTS_CXX  = -I/usr/X11R6/include  \
               -I/usr/include/pgsql  \
               -I/usr/include/pgsql/informix/esql  \
               -I/usr/lib/gcc/i386-redhat-linux/3.4.6/include  \
               -I/usr/local/netcdf/include  \
               -I../TEXT

.SUFFIXES:
.SUFFIXES:   .f .c .cxx .h .o .a

.f.a:
	@echo "-------------------------------- $<"
	@$(FC) $(FFLAGS) $(INSERTS_FC) $(INSERTS) -c $< \
	   && ar $(ARFLAGS) $@ $*.o \
	   || echo "e - $*"
	@rm -f $*.o
	@[ -f ${*F}.stb ] && rm -f ${*F}.stb
	@echo "--------------------------------"

.c.a:
	@echo "-------------------------------- $<"
	@$(CC) $(CFLAGS) $(INSERTS_CC) $(INSERTS) -c $< \
	   && ar $(ARFLAGS) $@ $*.o \
	   || echo "e - $*"
	@rm -f $*.o
	@echo "--------------------------------"

.cxx.a:
	@echo "-------------------------------- $<"
	@-$(CXX) $(CXXFLAGS) $(INSERTS_CXX) $(INSERTS) -c $< \
	   && ar $(ARFLAGS) $@ $*.o \
	   || echo "e - $*"
	@rm -f $*.o
	@echo "--------------------------------"

$(LIB)/libifp_nwsrfs_t.a:  \
     $(LIB)/libifp_nwsrfs_t.a(main_fort.o)  \
     $(LIB)/libifp_nwsrfs_t.a(main.o)  \
     $(LIB)/libifp_nwsrfs_t.a(ifp_nwsrfs_main.o)

